<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <% if current_user.admin? %>
        <th>User</th>
      <% end %>
      <th>Flight</th>
      <th>Booking Category</th>
      <th>Booking Row</th>
      <th>Booking Seat</th>
      <th>PNR Number</th>
      <th>Total fare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <% if current_user.admin? %>
          <td><%= booking.user.email %></td>
        <% end %>
        <td><%= booking.flight.plane.name %></td>
        <td><%= booking.seat_configuration.category.name %></td>
        <td><%= booking.row_number %></td>
        <td><%= booking.seat_number %></td>
        <td><%= booking.pnr_number %></td>
        <td><%= booking.total_fare %></td>
        <td><%= link_to 'Show', flight_booking_path(booking.flight, booking) %></td>
        <td><%= link_to 'Edit', edit_flight_booking_path(booking.flight, booking) %></td>
        <td><%= link_to 'Destroy', flight_booking_path(booking.flight, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

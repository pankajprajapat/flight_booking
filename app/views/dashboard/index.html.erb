<h1>
  Welcome To Flight Booking
</h1>
<% if current_user.admin? %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Plane</th>
        <th scope="col">Origin</th>
        <th scope="col">Destination</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @flights.each do |flight| %>
        <tr>
          <td><%= flight.plane.full_name %></td>
          <td><%= flight.origin %></td>
          <td><%= flight.destination %></td>
          <th scope="row"><%= link_to "Book", new_flight_booking_path(flight), class: 'btn btn-primary' %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
